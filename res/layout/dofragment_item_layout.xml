<?xml version="1.0" encoding="utf-8"?>
<!-- 显示计划内容和计划时长 -->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/do_iv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/do_time" 
            android:contentDescription="@string/do_iv_desc"
            />

        <TextView
            android:id="@+id/do_tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="5dp" 
             />
        <TextView
            android:id="@+id/do_tv_tag"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="1dp"
            android:layout_marginLeft="20dp" 
            />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="3dp"
        android:orientation="horizontal" >
        <TextView
            android:id="@+id/do_tv_none"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="5dp" 
            android:layout_marginBottom="2dp"
            android:layout_marginTop="2dp"
            android:background="#999999"
             />
        <TextView
            android:id="@+id/do_tv_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp" 
            android:background="@drawable/do_content"
             />
    </LinearLayout>

</LinearLayout>