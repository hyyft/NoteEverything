<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:paddingLeft="30dp"
    android:paddingRight="30dp"
    android:orientation="vertical" >
    
    <Button 
        android:id="@+id/backup_localbackup_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:background="@drawable/backup_localbtn_background"
        android:text="@string/restore_btn_localrestore"

        />
    <Button 
        android:id="@+id/backup_yunbackup_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" 
        android:layout_marginTop="20dp"
        android:background="@drawable/backup_yunbtn_background"
        android:text="@string/restore_btn_yunrestore"

        />
    

</LinearLayout>
